<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/attendance_fragment"
    tools:context=".ui.fragments.students.StudentAttendanceFragment">

    <ImageView
        android:id="@+id/qr_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/qr_code_image"
        app:srcCompat="@drawable/ic_qr_code"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/take_attendance"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_rect_primary"
        android:layout_below="@id/qr_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/take_attendance"
        android:textColor="@color/whiteTextColor"
        />

</RelativeLayout>